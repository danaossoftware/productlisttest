<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:background="@drawable/circle2"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="64dp"
        android:layout_width="17dp"
        android:layout_height="17dp"/>

    <View
        android:background="@drawable/circle3"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="32dp"
        android:layout_width="12dp"
        android:layout_height="12dp"/>

    <View
        android:background="@drawable/circle1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="70dp"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <View
        android:background="@drawable/circle4"
        android:layout_marginTop="256dp"
        android:layout_marginLeft="13dp"
        android:layout_width="8dp"
        android:layout_height="8dp"/>

    <View
        android:background="@drawable/circle3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="128dp"
        android:layout_width="13dp"
        android:layout_height="13dp"/>

    <View
        android:background="@drawable/circle4"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="50dp"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="@string/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- EMAIL -->

        <TextView
            android:textColor="#b1b6bc"
            android:layout_marginTop="32dp"
            android:text="Email"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <View
            android:id="@+id/email_separator"
            android:background="#d1d1d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <!-- PASSWORD -->

        <TextView
            android:textColor="#b1b6bc"
            android:layout_marginTop="16dp"
            android:text="@string/text2"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <RelativeLayout
                android:clickable="true"
                android:onClick="viewPassword"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/view_password"
                    android:layout_centerInParent="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/password_separator"
            android:background="#d1d1d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:background="@drawable/button_bg_03"
            android:textColor="#ffffff"
            android:stateListAnimator="@null"
            android:text="@string/text1"
            android:onClick="login"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!--<TextView
            android:textColor="#b1b6bc"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Sudah punya akun? Daftar"
            android:id="@+id/text1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </LinearLayout>

</RelativeLayout>